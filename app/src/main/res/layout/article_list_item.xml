<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:baselineAligned="false"
    android:padding="@dimen/default_padding">

    <LinearLayout
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginStart="@dimen/default_padding"
        android:layout_weight="1"
        style="@style/article_row">

        <TextView
            style="@style/section_title"
            android:id="@+id/section"
            android:fontFamily="@string/sans_serif_medium"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/sectionBlue"
            android:textSize="@dimen/header"
            tools:text="Section" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginStart="@dimen/default_padding"
        android:layout_weight="3"
        style="@style/article_row">

        <TextView
            style="@style/author_style"
            android:id="@+id/authors"
            android:maxLines="1"
            tools:text="Author" />
        <TextView
            android:id="@+id/title"
            style="@style/section_title"
            android:maxLines="2"
            tools:text="Title"/>
    </LinearLayout>

    <LinearLayout
        style="@style/article_row"
        android:layout_weight="1">

        <TextView
            android:id="@+id/publication_date"
            style="@style/date_column"
            tools:text="Mar 6 2010" />

        <TextView
            android:id="@+id/publication_time"
            style="@style/date_column"
            tools:text="23:59:00" />
    </LinearLayout>
</LinearLayout>
